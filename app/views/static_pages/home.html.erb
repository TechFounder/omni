<% if user_signed_in? %>
	<div class="jumbotron center">
		<h1>Welcome <%= current_user.name %></h1>
		<h3>Your email is <%= current_user.email %></h3>
	</div>
<% else %>
	<div class="jumbotron center">
		<h1>I love jumbotron!</h1>
		Click here to
		<%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary btn-lg" %><p></p>
		<p><%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter), class: "btn btn-primary" %>
		<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-primary" %></p>
	</div>
<% end %>